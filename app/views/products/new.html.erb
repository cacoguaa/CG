<h1>New Product</h1>
<%= form_with scope: :product, url: products_path, local: true do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </p>
   
    <p>
      <%= form.label :stock %><br>
      <%= form.text_area :stock %>
    </p>
   
    <p>
      <%= form.submit %>
    </p>
  <% end %>